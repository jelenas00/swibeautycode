@page
@model Pages.VlasnikAuth
@{
    Layout = "_LayoutVlasnik";
    ViewData["Title"]="Zaposli";
}
  <main id="main" class="main">

    <div class="pagetitle">
      <h1>Prikaz za zapošljavanje</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="./Vlasnik">Početna</a></li>
          <li class="breadcrumb-item">Prikaz</li>
          <li class="breadcrumb-item active">Zapošljavanje</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->
    
    
    <section class="section">
      <div class="row">
        <div class="col-lg-6">
            </div>
          </div>

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Dodaj radnika</h5>

              <!-- Multi Columns Form -->
              <form class="row g-3" onsubmit="return false">
                
                <div class="col-md-12">
                  <label for="inputName5" class="form-label">Ime</label>
                  <input type="text" type="submit" class="form-control" id="inputImefl" placeholder="Jana" required minlength="3" maxlength="30"/>
                </div>

                <div class="col-md-12">
                  <label for="inputPrezime" class="form-label">Prezime</label>
                  <input type="text" class="form-control" id="inputPrezimefl" placeholder="Jankov" required minlength="3" maxlength="40"/>
                </div>


                <div class="col-md-4">
                  <label for="inputTip" class="form-label">Tip radnika</label>
                  <select id="inputTip" class="form-select zaposliForma">
                    <!-- <option selected>Izaberi...</option> -->
                    <option value="Frizer">Frizer/ka</option>
                    <option value="Kozmeticar">Kozmetičar/ka</option>
                    <option value="Maser">Maser/ka</option>                       
                  </select>
                </div>

                

                <div class="row-mb-3">
                  <label for="inputUserName" class="form-label">Korisničko ime</label>
                  <input type="text" class="form-control" id="inputKorImefl" placeholder="jana99" required/>
                </div>

                <div class="col-md-6">
                  <label for="inputEmail5" class="form-label">E-mail</label>
                  <input type="email" class="form-control" id="inputEmailfl" placeholder="jankov@beautycode.com" required/>
                </div>

                <div class="col-md-6">
                  <label for="inputPassword5" class="form-label">Lozinka</label>
                  <input type="password" class="form-control" id="inputPasswordfl" placeholder="" required/>
                </div>

                <div class="col-12">
                  <label for="inputAddress5" class="form-label">Adresa stanovanja - ulica i broj </label>
                  <input type="text" class="form-control" id="inputAdresafl" placeholder="Ulica lepote, 4" required/>
                </div>
                
                <div class="row mb-3">
                  
                </div>
                
                <div class="row mb-3">
                  <label for="inputTel" class="col-sm-2 col-form-label">Broj telefona:</label>
                  <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputBrTelfl" placeholder="0698761239" required/>
                  </div>
                </div>

                <div class="row mb-3">
                  <label for="inputSkola" class="col-sm-2 col-form-label">Završena škola:</label>
                  <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputSkolafl" placeholder="Srednja" required/>
                  </div>
                </div>

                <div class="row mb-3">
                  <label for="inputRadniStaz" class="col-sm-2 col-form-label">Radni staž:</label>
                  <div class="col-sm-10">
                    <input type="number" class="form-control" id="inputStazfl" placeholder="5 godina" min="0" required/>
                  </div>
                </div>

                <div class="row mb-3">
                  <label for="inputGodina" class="col-sm-2 col-form-label">Godina rođenja:</label>
                  <div class="col-sm-10">
                    <input class="form-control col-6" type="date" id="birthdayRadnikfl" name="birthday">
                  </div>
                </div>
                <div class="row mb-3">
                  <label for="inputGodina" class="col-sm-2 col-form-label">Godina zaposlenja:</label>
                  <div class="col-sm-10">
                    <input type="number" class="form-control" id="inputGodZapfl" placeholder="2015" min="2000" required/>
                  </div>
                </div>

                <div class="col-md-2">
                  <label for="inputPlata" class="form-label">Plata</label>
                  <input type="number" class="form-control" id="inputPlatafl" placeholder="RSD:    35.000" min="32000" required/>
                </div>
                
                <div class="text-center">
                  <button type="submit" class="btn btn-success" id="zaposli" >Zaposli</button>
                  <!-- <input type="submit"> -->
                  <button type="reset" class="btn btn-secondary">Reset</button>
                </div>

                <!-- onclick="functionNeka();" -->
                

              </form><!-- End Multi Columns Form -->

            </div>
          </div>

        </div>

        

            </div>
          </div>

        </div>
      </div>
    </section>

  </main><!-- End #main -->
@section Scripts{
    <!-- Nase skripte-->
    <script src="assetsvlasnik/js/forms-layout.js" type="module"></script>
}